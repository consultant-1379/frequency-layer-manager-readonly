{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "$ref": "#/definitions/configuration",
  "definitions": {
    "configuration": {
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "schedule": {
          "type": "string"
        },
        "openLoop": {
          "type": "boolean"
        },
        "customizedGlobalSettings": {
          "type": "object"
        },
        "customizedDefaultSettings": {
          "type": "object"
        },
        "groups": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "customizedGroupSettings": {
                "type": "object"
              }
            }
          }
        },
        "inclusionList": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            }
          }
        },
        "exclusionList": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            }
          }
        },
        "weekendDays": {
          "type": "string"
        },
        "enablePA": {
          "type": "boolean"
        }
      }
    }
  }
}
